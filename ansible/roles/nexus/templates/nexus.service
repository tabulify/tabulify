[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
ExecStart={{ nexus_home }}/{{ nexus_application_directory }}/bin/nexus start
ExecStop={{ nexus_home }}/{{ nexus_application_directory }}/bin/nexus stop
User={{ nexus_user }}
Restart=on-abort

[Install]
WantedBy=multi-user.target
