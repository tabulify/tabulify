
server {

    listen       443 ssl http2;
    listen       [::]:443 ssl http2;

    # Change `example.com` to match your domain name.
    server_name {{ prometheus_node_exporter_fqdn }};

    # allow large uploads of files
    client_max_body_size 1G;

    # optimize downloading files larger than 1G
    # proxy_max_temp_file_size 2G;

    ssl_certificate_key "/etc/letsencrypt/live/{{ prometheus_node_exporter_fqdn }}/privkey.pem";
    ssl_certificate "/etc/letsencrypt/live/{{ prometheus_node_exporter_fqdn }}/fullchain.pem";
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Stub status global access
    location = /stub_status {

        allow {{ nginx_allowed_subnet }};
        deny  all;

        stub_status;

    }

    location / {

        # https://nginx.org/en/docs/http/ngx_http_access_module.html
        allow {{ nginx_allowed_subnet }};
        deny  all;

        proxy_pass http://127.0.0.1:{{ prometheus_node_exporter_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto "https";
    }

}

# redirect ssl
server {
    listen 80;
    server_name {{ prometheus_node_exporter_fqdn }};
    return 301 https://{{ prometheus_node_exporter_fqdn }}$request_uri;
}

# Basic monitoring of nginx
#
# Used by netdata
# https://learn.netdata.cloud/docs/agent/collectors/python.d.plugin/nginx
# expected at http://localhost/stub_status'
#
# doc: http://nginx.org/en/docs/http/ngx_http_stub_status_module.html
server {

    listen 80;
    server_name localhost;
    location = /stub_status {

            stub_status;

    }
}
