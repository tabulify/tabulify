
# Analytics
server {
    listen       443 ssl http2;
    listen       [::]:443 ssl http2;

    # Change `example.com` to match your domain name.
    server_name {{ backend_fqdn_analytics }};

    # the logs
    access_log  {{ backend_fqdn_analytics_log_dir }}/https-access.log;
    error_log  {{ backend_fqdn_analytics_log_dir }}/https-error.log;

    ssl_certificate_key "/etc/letsencrypt/live/{{ backend_fqdn_analytics }}/privkey.pem";
    ssl_certificate "/etc/letsencrypt/live/{{ backend_fqdn_analytics }}/fullchain.pem";
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;


    location / {

        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto "https";
        proxy_pass http://127.0.0.1:{{ backend_port }}/analytics;
        proxy_http_version 1.1;
        proxy_pass_request_headers on;
        proxy_set_header Connection "keep-alive";
        proxy_store off;

    }
}
