# Define a group of server
# http://nginx.org/en/docs/http/ngx_http_upstream_module.html
upstream netdata {
    server 127.0.0.1:{{ netdata_default_port }};
    # A keepalive directive sets the maximum number of upstream idle connections that can remain open at any given time (for each Nginx worker process).
    keepalive 64;
}

server {
    listen       443 ssl http2;
    listen       [::]:443 ssl http2;

    # Change `example.com` to match your domain name.
    server_name {{ netdata_fqdn }};

    ssl_certificate_key "/etc/letsencrypt/live/netdata.bytle.net/privkey.pem";
    ssl_certificate "/etc/letsencrypt/live/netdata.bytle.net/fullchain.pem";
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    location / {

        allow {{ nginx_allowed_subnet }};
        deny  all;

        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://netdata;
        proxy_http_version 1.1;
        proxy_pass_request_headers on;
        proxy_set_header Connection "keep-alive";
        proxy_store off;

    }
}

# redirect ssl
server {
    listen 80;
    server_name {{ netdata_fqdn }};
    return 301 https://{{ netdata_fqdn }}$request_uri;
}
