{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "services",
    "hosts"
  ],
  "properties": {
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "dns-records": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "host"
              ]
            }
          }
        }
      }
    },
    "hosts": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "ipv4": {
            "type": "string"
          }
        },
        "required": [
          "ipv4"
        ]
      }
    }
  }
}
