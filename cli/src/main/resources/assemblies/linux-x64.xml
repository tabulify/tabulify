<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>linux-x64</id>
    <formats>
        <format>zip</format>
    </formats>
    <!-- The resources are directly locate on the root of zip -->
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <!-- For bash generated -->
        <fileSet>
            <directory>${project.build.directory}/bin</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- For bash script not generated -->
        <fileSet>
            <directory>${project.basedir}/src/main/bin</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- For bat and bash library not generated -->
        <fileSet>
            <directory>${project.basedir}/src/main/bin/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- For lib (native, ...) -->
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/site</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
    </fileSets>
    <!-- Add the dependency of the project in the lib directory -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>runtime</scope>
            <excludes>
                <!-- No Zip file -->
                <exclude>*:zip:*</exclude>
                <!-- No Assembly file that contains only the assemblies file -->
                <exclude>*:assembly:jar:*</exclude>
            </excludes>
        </dependencySet>
        <!-- The JRE -->
        <dependencySet>
            <outputDirectory>\</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>*:jre:zip:linux-x64:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>