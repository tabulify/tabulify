<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>windows-x64</id>
    <formats>
        <format>zip</format>
    </formats>
    <!-- Base directory: unzipping the archive will show a directory with the name of the app (ie artifactId) -->
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>\</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <!-- For bat and bash generated -->
        <fileSet>
            <directory>${project.build.directory}\bin</directory>
            <outputDirectory>\</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- For bat and bash not generated -->
        <fileSet>
            <directory>${project.basedir}\src\main\bin</directory>
            <outputDirectory>\</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- For bat and bash library not generated -->
        <fileSet>
            <directory>${project.basedir}\src\main\bin\lib</directory>
            <outputDirectory>\lib</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- For lib (native, ...) -->
        <fileSet>
            <directory>${project.build.directory}\lib</directory>
            <outputDirectory>\lib</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}\site</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
    </fileSets>
    <!-- Add the dependency of the project in the lib directory -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>runtime</scope>
            <excludes>
                <!-- No Zip file -->
                <exclude>*:zip:*</exclude>
                <!-- No Assembly file that contains only the assemblies file -->
                <!--<exclude>*:assembly:jar:*</exclude>-->
            </excludes>
        </dependencySet>
        <!-- The JRE -->
        <dependencySet>
            <outputDirectory>\</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>*:jre:zip:windows-x64:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>